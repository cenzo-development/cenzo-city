
    <div class="login-page">

        <!-- Begin page -->
        <div  class="container-fluid">

            <!-- ============================================================== -->
            <!-- Start Content here -->
            <!-- ============================================================== -->

            <div class="absolute-center">

                <div class="card-box form-signin">

                        <h2 class="text-uppercase text-center pb-4">
                            <span><%= image_tag "cenzo-logo.png", alt: "Cenzo", width: "60%" %></span>
                        </h2>

                        <%= form_with url: create_session_path, local: true do |form| %>
                        <div class="form-group m-b-20 row">
                          <div class="col-12">
                            <%= form.label :email %>
                            <%= form.email_field :email, id: :user_email, class: "form-control", placeholder: "Enter your email" %>
                          </div>
                        </div>

                        <div class="form-group m-b-20 row">
                          <div class="col-12">
                            <%=link_to new_password_reset_path, class: "text-muted pull-right" do%>
                            <small>Forgot your password?</small>
                            <%end%>
                            <%= form.label :password %>
                            <%= form.password_field :password, id: :user_password, class: "form-control", placeholder: "Enter your password" %>
                          </div>
                        </div>

                        <div class="form-group row text-center m-t-10">
                          <div class="col-12">
                            <%= form.submit "Log In", class: "btn btn-block btn-custom waves-effect waves-light" %>
                          </div>
                        </div>
                        <%end%>

                        <div class="row m-t-50">
                            <div class="col-sm-12 text-center">
                                <p class="text-muted">Don't have an account?</p> <%=link_to register_path, class: "text-dark m-l-5" do %>
                                <b>Register</b>
                                <%end%>
                            </div>
                        </div>
                </div>

                <!-- ========== boilerplate========== -->
                  <%= render 'layouts/shared/boilerplate.html' %>
                <!-- boilerplate End -->
            </div>
            <!-- END login-page -->

            <!-- ============================================================== -->
            <!-- End content here -->
            <!-- ============================================================== -->
        </div>
        <!-- END wrapper -->


    </div>
