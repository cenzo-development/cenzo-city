<div class="content">
                   <div class="container-fluid">

                       <div class="page-title-box">
                           <span class="h4 page-title">Clients </span>
                           <ol class="breadcrumb">
                           <li class="breadcrumb-item"><a href="/">Home</a></li>
                           <li class="breadcrumb-item active" aria-current="page">Clients</li>
                           </ol>
                       </div>

                       <div class="row">
                           <div class="col-lg-12">
                               <div class="card-box">

                                   <h1>Clients</h1>

                                   <!-- Table Toolbar -->
                                   <div class="row">
                                       <div class="col-md-4">
                                         <%=form_tag search_index_clients_path, method: 'post', class: "app-search app-search-block" do%>
                                         <%=text_field_tag :query, @q, placeholder: "Search...", class: "form-control"%>
                                         <button type="submit"><i class="fa fa-search"></i></button>
                                         <%end%>
                                       </div>

                                       <div class="col-md-8 pt-2">
                                           <p class="text-muted d-inline-block"><strong>Tip:</strong> To add a new client, first search to see if they exist</p>
                                       </div>
                                   </div>
                                   <!-- /.row -->
                                   <div class="table-responsive">
                                       <table class="table table-hover table-centered table-striped m-0">
                                           <thead>
                                               <tr>
                                                   <th>Number</th>
                                                   <th>Name</th>
                                                   <th>BSN</th>
                                                   <th>Birthdate</th>
                                                   <!--<th>Last Log In</th>-->
                                                   <th class="text-center">Actions</th>
                                               </tr>
                                           </thead>
                                           <tbody>
                                             <% @clients.each do |client| %>
                                               <tr>
                                                   <td>
                                                     <%= client.client_number %>
                                                   </td>
                                                   <td>
                                                     <%= client.client_name %>
                                                   </td>
                                                   <td>
                                                     <%= client.client_bsn %>
                                                   </td>
                                                   <td>
                                                     <%= client.client_dob %>
                                                   </td>

                                                   <td class="text-center">
                                                     <%=link_to client_path(client.id), class: "btn btn-sm btn-link" do%>
                                                     <i class="fa fa-clipboard"></i> View Client
                                                     <%end%>
                                                     <%=link_to edit_client_path(client.id), class: "btn btn-sm btn-link" do%>
                                                     <i class="fa fa-pencil"></i> Edit
                                                     <%end%>
                                                   </td>
                                               </tr>
                                               <%end%>
                                           </tbody>
                                       </table>

                                     </div>

                                     <div class="mt-3">
                                       <%=will_paginate @clients, renderer: WillPaginate::ActionView::BootstrapLinkRenderer%>
                                     </div>
                               </div>
                               <!-- /.card-box -->
                           </div>
                           <!-- /.col-lg-12 -->
                       </div>
                       <!-- end row -->

                   </div> <!-- container -->

               </div> <!-- content -->
